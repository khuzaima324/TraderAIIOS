{
  "expo": {
    "name": "Traders AI",
    "slug": "traders-ai-ios",
    "experiments": {
      "tsconfigPaths": true
    },
    "scheme": "tradersai",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/new-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tradersai.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "usesAppleSignIn": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ],
        "NSCameraUsageDescription": "Traders AI needs access to your camera to scan and analyze trading charts in real-time.",
        "NSPhotoLibraryUsageDescription": "Traders AI needs access to your photos to let you upload and analyze saved chart screenshots."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/transparent.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tradersai.app"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      "expo-notifications",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-font"
    ]
  }
}